<% layout("/layouts/boilerplate") %>

<div class="container mb-5">
  <div id="projectCarousel" class="carousel slide mb-4" data-ride="carousel">
    <div class="carousel-inner rounded">
      <% if (project.images.length < 1) { %>
      <img src="..." class="d-block w-100" alt="..." />
      <% } else { %> <% project.images.forEach((img, i) => { %>
      <div class="carousel-item <%= i === 0 ? "active" : "" %>">
        <img src="<%= img.url %>" class="d-block w-100" alt="..." />
      </div>
      <% }) %> <% } %>
    </div>
    <% if (project.images.length > 1) { %>
    <a
      class="carousel-control-prev"
      href="#projectCarousel"
      role="button"
      data-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#projectCarousel"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <% } %>
  </div>

  <div class="row">
    <div class="col-md-5 mb-4">
      <h2 class="text-dark"><%= project.title %></h2>
      <h4 class="text-secondary"><%= project.location %></h4>
      <p class="text-muted">By <%= project.author.username %></p>

      <% for (let donation of project.donations) { %> <% amountRaised +=
      donation.amount %> <% } %>
      <h4>
        <%= new Intl.NumberFormat('en-US', { style: 'currency',
        currency: 'PHP' }).format(amountRaised) %> raised
      </h4>
      <p class="text-secondary mb-2">
        <%= new Intl.NumberFormat('en-US', { style: 'currency',
        currency: 'PHP' }).format(project.targetAmount) %> target amount
      </p>
      <div class="d-flex justify-content-between text-dark">
        <p>
          <%= Math.floor((amountRaised / project.targetAmount) * 100) %>%
          achieved
        </p>
        <p><%= dayjs(project.targetDate).toNow(true) %> left</p>
      </div>
      <div class="progress mb-3">
        <div
          class="progress-bar bg-danger"
          role="progressbar"
          style="
            width: <%= Math.floor((amountRaised / project.targetAmount) * 100)
              %>%;
          "
          aria-valuenow="<%= Math.floor((amountRaised / project.targetAmount) * 100) %>"
          aria-valuemin="0"
          aria-valuemax="100"
        ></div>
      </div>
      <a
        class="btn btn-outline-danger btn-block <%= project.status !== 'seeding' ? "disabled" : "" %>" 
        href="/projects/<%= project._id %>/donations/new"
        ><i class="fas fa-donate"></i> Donation</a
      >
      <% if (currentUser && currentUser.isAdmin) { %>
      <div class="mt-3">
        <a class="btn btn-info" href="/projects/<%= project._id %>/edit"
          >Edit</a
        >
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-danger"
          data-toggle="modal"
          data-target="#deleteProject"
        >
          Delete
        </button>
        <!-- Modal -->
        <div
          class="modal fade"
          id="deleteProject"
          tabindex="-1"
          aria-labelledby="deleteProjectLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="deleteProjectLabel">
                  Deleting a project
                </h5>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Are you sure you want to delete this?
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >
                  Close
                </button>
                <form
                  class="d-inline"
                  action="/projects/<%= project._id %>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn btn-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>

    <div class="col-md-7 pl-md-5">
      <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <a
            class="nav-link active"
            id="description-tab"
            data-toggle="tab"
            href="#description"
            role="tab"
            aria-controls="description"
            aria-selected="true"
            ><i class="fas fa-info-circle"></i> Description</a
          >
        </li>
        <li class="nav-item" role="presentation">
          <a
            class="nav-link"
            id="comments-tab"
            data-toggle="tab"
            href="#comments"
            role="tab"
            aria-controls="comments"
            aria-selected="false"
            ><i class="fas fa-comments"></i> Comments(<%=
            project.comments.length %>)</a
          >
        </li>
        <li class="nav-item" role="presentation">
          <a
            class="nav-link"
            id="backers-tab"
            data-toggle="tab"
            href="#backers"
            role="tab"
            aria-controls="backers"
            aria-selected="false"
            ><i class="fas fa-users"></i> Backers(<%= project.donations.length
            %>)</a
          >
        </li>
      </ul>
      <div class="tab-content mb-3" id="myTabContent">
        <div
          class="tab-pane fade show active"
          id="description"
          role="tabpanel"
          aria-labelledby="description-tab"
        >
          <p class="text-muted"><%= project.description %></p>
        </div>
        <div
          class="tab-pane fade"
          id="comments"
          role="tabpanel"
          aria-labelledby="comments-tab"
        >
          <% if (currentUser) { %>
          <form
            action="/projects/<%= project._id %>/comments"
            method="POST"
            class="validated-form mb-3"
            novalidate
          >
            <div class="form-group">
              <label for="body">Leave a comment</label>
              <textarea
                class="form-control"
                id="body"
                name="comment[body]"
                rows="3"
                required
              ></textarea>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-danger">Submit</button>
          </form>
          <% } %>
          <p class="text-muted">
            <%= project.comments.length < 1 ? "No available comments" : "" %>
          </p>
          <% for (let comment of project.comments) { %>
          <div class="media mb-3">
            <img
              src='https://res.cloudinary.com/dzfkuznwb/image/upload/v1612774796/Crowdfunding/it8yxdyvvrv1zwu3quwc.png'
              class="mr-2"
              alt="..."
              width="50px"
            />
            <div class="media-body">
              <p class="text-dark my-0"><%= comment.author.username %></p>
              <p class="text-muted mb-0">
                <%= dayjs(comment.createdAt).fromNow() %>
              </p>
              <p class="mb-0"><%= comment.body %></p>
              <% if (currentUser && (currentUser.isAdmin ||  comment.author.equals(currentUser._id)) ) {
              %>
              <form
                action="/projects/<%= project._id %>/comments/<%= comment._id %>?_method=DELETE"
                method="POST"
                class="mt-1"
              >
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
              <% } %>
            </div>
          </div>
          <% } %>
        </div>
        <div
          class="tab-pane fade show"
          id="backers"
          role="tabpanel"
          aria-labelledby="backers-tab"
        >
          <p class="text-muted">
            <%= project.donations.length < 1 ? "No available backers" : "" %>
          </p>
          <% for (let donation of project.donations) { %>
          <div class="media mb-3">
            <img
              src="https://res.cloudinary.com/dzfkuznwb/image/upload/v1612774796/Crowdfunding/it8yxdyvvrv1zwu3quwc.png"
              class="mr-2"
              alt="..."
              width="50px"
            />
            <div class="media-body">
              <p class="text-dark my-0">
                <%= donation.backer.username %> donated 
                <%= new Intl.NumberFormat('en-US', { style: 'currency',
                currency: 'PHP' }).format(donation.amount) %>
              </p>
              <p class="text-muted mb-0">
                <%= dayjs(donation.createdAt).fromNow() %>
              </p>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
