<% layout("/layouts/boilerplate") %>

<img src="<%= project.image %>" alt="" class="img-fluid rounded" />
<div class="row my-5">
  <div class="col-md-7 px-md-5">
    <h1><%= project.title %></h1>
    <h2><%= project.location %></h2>
    <p><%= project.description %></p>
  </div>
  <div class="col-md-5 px-md-5">
    <h2>
      PHP <%= Number(project.targetAmount/2).toLocaleString("en-PH",
      {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
    </h2>
    <p class="text-muted">
      PHP <%= Number(project.targetAmount).toLocaleString("en-PH",
      {minimumFractionDigits: 2, maximumFractionDigits: 2}) %> Target Amount
    </p>
    <div class="progress mb-3">
      <div
        class="progress-bar bg-danger"
        role="progressbar"
        style="width: 50%"
        aria-valuenow="50"
        aria-valuemin="0"
        aria-valuemax="100"
      ></div>
    </div>
    <p class="text-muted">50% Achieved</p>
    <p class="text-muted">
      <span class="badge badge-danger">D-50</span> <%= project.targetDate %> is
      the last day
    </p>
    <a class="btn btn-danger btn-block" href="#">Donation</a>
    <hr />
    <a class="btn btn-info" href="/projects/<%= project._id %>/edit">Edit</a>
    <form
      class="d-inline"
      action="/projects/<%= project._id %>?_method=DELETE"
      method="POST"
    >
      <button class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>
