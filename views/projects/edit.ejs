<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center my-5">Edit Project</h1>
    <form action="/projects/<%= project._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="project[title]"
          value="<%= project.title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="project[location]"
          value="<%= project.location %>"
        />
      </div>

      <label class="form-label" for="targetAmount">Target Amount</label>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">PHP</span>
        </div>
        <input
          class="form-control"
          type="number"
          id="targetAmount"
          name="project[targetAmount]"
          value="<%= project.targetAmount %>"
          min="25000"
          max="50000"
          aria-label="Amount (to the nearest philippine)"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="targetDate">Target Date</label>
        <input
          class="form-control"
          type="text"
          id="targetDate"
          name="project[targetDate]"
          value="<%= project.targetDate %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="project[description]"
        >
<%= project.description %></textarea
        >
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="project[image]"
          value="<%= project.image %>"
        />
      </div>
      <button class="btn btn-danger">Update Project</button>
    </form>
    <a href="/projects">All Projects</a>
  </div>
</div>
